{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "cmake --build ./build --config Debug --target ALL_BUILD -- /m /property:GenerateFullPaths=true",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cmake --build ./build --config Release --target ALL_BUILD -- /m /property:GenerateFullPaths=true"
        },
        {
            "label": "compile command",
            "type": "shell",
            "command": "C:/msys64/usr/bin/gtags.exe;cd build;mkdir cc;cd cc ;cmake -G 'MinGW Makefiles' ../..;cp ./compile_commands.json ../"
        } 
    ]
}